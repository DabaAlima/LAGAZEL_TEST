        <field name="name">Purchase Template multi-company</field>
        <field name="model_id" ref="model_purchase_product_template" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
    <record id="purchase_template_line_comp_rule" model="ir.rule">
        <field name="name">Purchase Template Line multi-company</field>
        <field name="model_id" ref="model_purchase_product_template_line" />
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
