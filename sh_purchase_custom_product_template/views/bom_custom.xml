<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_bom_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="bom_parent" widget="many2many_tags"/>
            </field>
        </field>
    </record>

    <record id="view_mrp_bom_filter_inherit" model="ir.ui.view">
            <field name="name">mrp.bom.select.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.view_mrp_bom_filter" />
            <field name="arch" type="xml">
                <filter name="default_unit_of_measure" position="after">
                    <filter string = "Nomenclature parent" name = "bom_parent_ids" context = "{'group_by': 'bom_parent_ids'}" />
                </filter>
            </field>
    </record>
</odoo>
